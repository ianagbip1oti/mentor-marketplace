<%- include('header') -%>

<div class="container">
  <div class="row mt-5 justify-content-center">
    <a class="btn btn-primary" href="/become-mentor" role="button">Become a Mentor</a>
  </div>
  
  <div class="row mt-5 justify-content-center">
    <div class="col-sm-12 col-md-9 col-lg-6">
      <% for (let m of mentors) { %>
        <div class="card">
          <div class="card-body">
            <h4 class="card-title"><%= m.title %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= m.email %></h6>
            <p class="card-text"><%= m.description %></p>
            <a href="#" class="btn btn-primary">$<%= m.price %>/hr</a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('footer') -%>
